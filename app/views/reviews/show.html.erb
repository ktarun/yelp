<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Comment</dt>
      <dd><%= @review.comment %></dd>

      <dt>Rating</dt>
      <dd><%= @review.rating %></dd>

      <dt>Business</dt>
      <dd>
        <% if @review.businesses.present? %>
          <a href="/businesses/<%= @review.business_id %>">
            <%= @review.businesses.address %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @review.user.present? %>
          <a href="/users/<%= @review.user_id %>">
            <%= @review.user.name %>
          </a>
        <% end %>
      </dd>

      <dt>Photo</dt>
      <dd><img src="<%= @review.photo %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
