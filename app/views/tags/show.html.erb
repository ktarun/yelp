<div class="page-header">
  <h3>Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Tag name</dt>
      <dd>
        <% if @tag.tag_name.present? %>
          <a href="/tag_names/<%= @tag.tag_name_id %>">
            <%= @tag.tag_name.name %>
          </a>
        <% end %>
      </dd>

      <dt>Business</dt>
      <dd>
        <% if @tag.business.present? %>
          <a href="/businesses/<%= @tag.business_id %>">
            <%= @tag.business.address %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tags" class="btn btn-primary">
        Back
      </a>
      <a href="/tags/<%= @tag.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tag/<%= @tag.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
