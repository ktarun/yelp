<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tag_name_id -->
      <div class="form-group">
        <label for="tag_name_id" class="control-label">
          Tag name
        </label>

        <%= select_tag(:tag_name_id, options_from_collection_for_select(TagName.all, :id, :name, @tag.tag_name_id), :class => "form-control") %>
      </div>

      <!-- Label and input for business_id -->
      <div class="form-group">
        <label for="business_id" class="control-label">
          Business
        </label>

        <%= select_tag(:business_id, options_from_collection_for_select(Business.all, :id, :address, @tag.business_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Tag
      </button>
      or
      <a href="/tags">Cancel</a>
    </form>
  </div>
</div>
