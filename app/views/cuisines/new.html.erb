<!-- Validation failure messages -->
<% if @cuisine.errors.any? %>
  <% @cuisine.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Cuisine</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_cuisine" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <input type="text" id="tag_id" name="tag_id" placeholder="Tag" class="form-control" value="<%= @cuisine.tag_id %>">
      </div>

      <!-- Label and input for businesses_id -->
      <div class="form-group">
        <label for="businesses_id" class="control-label">
          Businesses
        </label>

        <input type="text" id="businesses_id" name="businesses_id" placeholder="Businesses" class="form-control" value="<%= @cuisine.businesses_id %>">
      </div>

      <button class="btn btn-success">
        Create Cuisine
      </button>
      or
      <a href="/cuisines">Cancel</a>
    </form>
  </div>
</div>
