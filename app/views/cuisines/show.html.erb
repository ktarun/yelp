<div class="page-header">
  <h3>Cuisine #<%= @cuisine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Tag</dt>
      <dd>
        <% if @cuisine.tag.present? %>
          <a href="/tags/<%= @cuisine.tag_id %>">
            <%= @cuisine.tag.name %>
          </a>
        <% end %>
      </dd>

      <dt>Businesses</dt>
      <dd>
        <% if @cuisine.businesses.present? %>
          <a href="/businesses/<%= @cuisine.businesses_id %>">
            <%= @cuisine.businesses.address %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cuisines" class="btn btn-primary">
        Back
      </a>
      <a href="/cuisines/<%= @cuisine.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cuisine/<%= @cuisine.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
