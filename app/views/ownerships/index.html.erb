<div class="page-header">
  <h1>
    Ownerships
    <a href="/ownerships/new" class="btn btn-lg btn-success">New Ownership</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "ownerships_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :businesses_id, "Businesses" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :businesses_id_gteq, :class => "form-control", :placeholder => "Businesses greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :businesses_id_lteq, :class => "form-control", :placeholder => "Businesses less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_name_cont, "User name contains" %>
      <%= f.text_field :user_name_cont, :class => "form-control", :placeholder => "User name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/ownerships" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#ownerships_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Businesses</th>
        <th>Actions</th>
      </tr>

      <% @ownerships.each do |ownership| %>
      <tr>
        <td>
          <% if ownership.user.present? %>
            <a href="/users/<%= ownership.user.id %>">
              <%= ownership.user.name %>
            </a>
          <% end %>
        </td>
        <td><%= ownership.businesses_id %></td>
        <td>
          <a href="/ownerships/<%= ownership.id %>" class="btn btn-primary">Show</a>
          <a href="/ownerships/<%= ownership.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ownership/<%= ownership.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ownerships, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
